      opacity: 0.7;
    }
    
    .links {
      display: flex;
      justify-content: center;
      gap: 2rem;
      margin-top: 0.5rem;
    }
    
    .link {
      color: #1a365d;
      transition: all 0.2s ease;
    }
    
    .link:hover {
      opacity: 0.7;
    }
    
    .link svg {
      width: 24px;
      height: 24px;
    }
